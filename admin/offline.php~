<?php
if (isset($_POST['off']) && ($_POST['off']=="yes")) {
           $myFile = "off.php";
           $fh = fopen($myFile, 'w') or die("can't open file");
           
           $stringData = "<?php\n\$offline_message='".$_POST['elm1']."';\nheader('location: off.php');\n?>";
           fwrite($fh, $stringData);
           fclose($fh);
     }
if (isset($_POST['off']) && ($_POST['off']=="no")) {
           $myFile = "off.php";
           $fh = fopen($myFile, 'w') or die("can't open file");
           
           $stringData = "";
           fwrite($fh, $stringData);
           fclose($fh);
     }
     
?>

