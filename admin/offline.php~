<script type="text/javascript">
function checkn(field,alertt)
{
	with(field)
	{
		if ((value==null)||(value==""))
		{
			alert(alertt);
			return false;
		}
		else
		{
			return true;
		}
	}
}

function vreq(thisform)
{
	with(thisform)
	{
		if (checkn(off,"Invalid!")==false)
		{
			off.focus();
		}
		else
		{
			thisform.submit();
		}
	}
		
}
</script>                            

